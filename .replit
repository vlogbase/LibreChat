modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MongoDB"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "LibreChat-Backend"

[[workflows.workflow]]
name = "MongoDB"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mkdir -p data/db && mongod --dbpath data/db --port 27017 --bind_ip 127.0.0.1"

[[workflows.workflow]]
name = "LibreChat-Backend"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cross-env NODE_ENV=production PORT=5000 node api/server/index.js"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "npm run backend"]

[[ports]]
localPort = 5000
externalPort = 80
